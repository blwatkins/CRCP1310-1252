// Iteration - performing a set of steps
//   over and over again.

// boolean expression

// boolean variables -> true or false

boolean isCloudy = true;

// relational operators
// <, <=, >, >=, ==, !=
// < : less than

int red = 354;
float grass = 5.296;

boolean lessThan = red < grass;
println(lessThan);

boolean redLessThan = red <= 354;
println("redLessThan = " + redLessThan);

boolean isEqualTo = red == grass;
println("isEqualTo = " + isEqualTo);

boolean isNotEqual = red != grass;
println("isNotEqual = " + isNotEqual);
println();

grass = 354;
println("isEqualTo = " + isEqualTo);

isEqualTo = red == grass;
println("isEqualTo = " + isEqualTo);
